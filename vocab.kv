
WindowManager:
    CreateAccountWindow:
    LoginWindow:
    OptionWindow:
    WODWindow:
    VocabWindow:
    QuizWindow:


<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width + root.height) / 30

            Label:
                size_hint: 0.3, 0.12
                pos_hint: {"x":0.2, "top":0.8}
                text: "Name: "
                font_size: (root.width + root.height) / 50

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: namee
                multiline: False
                font_size: (root.width + root.height) / 50

            Label:
                size_hint: 0.3, 0.12
                pos_hint: {"x":0.2, "top":0.8-0.13}
                text: "Email: "
                font_size: (root.width + root.height) / 50

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: email
                multiline: False
                font_size: (root.width + root.height) / 50

            Label:
                size_hint: 0.3, 0.12
                pos_hint: {"x":0.2, "top":0.8-0.13*2}
                text: "Password: "
                font_size: (root.width + root.height) / 50

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: passw
                multiline: False
                password: True
                font_size: (root.width + root.height) / 50

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width + root.height) / 50
            text: "Already have an Account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            font_size: (root.width + root.height) / 35
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        Label:
            text:"Email: "
            font_size: (root.width + root.height) / 50
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            font_size: (root.width + root.height) / 50
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.15

        Label:
            text:"Password: "
            font_size: (root.width + root.height) / 50
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width + root.height) / 50
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.15

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width + root.height) / 30
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width + root.height) / 70
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()


<OptionWindow>:
    name: "options"

    FloatLayout:

        Label:
            text: "Welcome to the Vocab-Learner-2000! Choose an option below:"
            font_size: (root.width + root.height) / 60
            halign: "center"
            valign: "middle"
            pos_hint: {"x":0.3, "top":0.9}
            size_hint: 0.4, 0.1

        Button:
            pos_hint: {"x":0.3, "y":0.6}
            size_hint: 0.4, 0.1
            text: "Add to my vocab list"
            on_release:
                app.root.current = "vocab"
                root.manager.transition.direction = "left"

        Button:
            pos_hint: {"x":0.3, "y":0.4}
            size_hint: 0.4, 0.1
            text: "Quiz me"
            on_release:
                app.root.current = "quiz"
                root.manager.transition.direction = "left"

        Button:
            pos_hint: {"x":0.3, "y":0.2}
            size_hint: 0.4, 0.1
            text: "Word of the day"
            on_release:
                app.root.current = "wod"
                root.manager.transition.direction = "left"

        Button:
            pos_hint: {"x":0.4, "y":0.1}
            size_hint: 0.2, 0.05
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"


<WODWindow>:
    name: "wod"

    Label:
        text: "The Word of the Day is: Bonjour. Add to your vocab list?"

    Button:
        pos_hint: {"x":0.4, "y":0.1}
        size_hint: 0.2, 0.05
        text: "Back"
        on_release:
            app.root.current = "options"
            root.manager.transition.direction = "right"


<VocabWindow>:
    name: "vocab"

    frenchWord: frenchWord
    englishWord: englishWord
    synonym: synonym
    sentence: sentence

    GridLayout:
        cols: 2

        Label:
            text: "Choose vocab list to add to:"

        GridLayout:
            cols: 4 # total number of lists
            ToggleButton:
                id: masterToggle
                text: "Master"
                state: "down"
                # background_color: [1, 0, 0, 1]
                # is it possible to give this a permanent state?
            ToggleButton:
                id: expressionToggle
                text: "Expressions"
            ToggleButton:
                id: foodToggle
                text: "Food"
            ToggleButton:
                id: scienceToggle
                text: "Science"

        Label:
            text: "French Word (use the article if applicable): "

        TextInput:
            id: frenchWord
            multiline: False

        Label:
            text: "English Definition (match the article, '--' if NA): "

        TextInput:
            id: englishWord
            multiline: False

        Label:
            text: "French Synonym of explanation ('--' if NA): "

        TextInput:
            id: synonym
            multiline: False

        Label:
            text: "French Sentence ('--' if NA): "

        TextInput:
            id: sentence
            multiline: True

        Button:
            text: "Back"
            on_release:
                app.root.current = "options"
                root.manager.transition.direction = "right"

        Button:
            text: "Submit"
            on_release:
                root.storeData()


<QuizWindow>:
    name: "quiz"

    frenchWordInput: frenchWordInput

    FloatLayout:

        Label:
            text: "Quiz: Enter the French equivalent."
            pos_hint: {"x":0.3, "y":0.8}
            size_hint: 0.4, 0.2
            font_size: (root.width + root.height) / 50

        Label:
            text: root.englishQuizWord # access StringProperty('') here, or method
            font_size: (root.width + root.height) / 60
            pos_hint: {"x":0.3, "y":0.6}
            size_hint: 0.4, 0.2

        TextInput:
            id: frenchWordInput
            font_size: (root.width + root.height) / 60
            multiline: False
            pos_hint: {"x": 0.3 , "y":0.4}
            size_hint: 0.4, 0.2

        Button:
            text: "Hint: synonym"
            pos_hint: {"x": 0.05 , "y":0.6}
            size_hint: 0.2, 0.15
            font_size: (root.width + root.height) / 80
            on_release:
                root.hintSynonym()

        Button:
            text: "Hint: sentence"
            pos_hint: {"x": 0.75 , "y":0.6}
            size_hint: 0.2, 0.15
            font_size: (root.width + root.height) / 80
            on_release:
                root.hintSentence()

        Button:
            text: "Submit"
            pos_hint: {"x": 0.4 , "y":0.2}
            size_hint: 0.2, 0.15
            font_size: (root.width + root.height) / 60
            on_release:
                root.verifyEntry()
                # We don't want to reset until the popup is closed!
                root.reset()

        Button:
            text: "Back"
            pos_hint: {"x": 0.1 , "y":0.1}
            size_hint: 0.2, 0.15
            font_size: (root.width + root.height) / 70
            on_release:
                app.root.current = "options"
                root.manager.transition.direction = "right"